# SlowHands Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# LLM Provider (default: deepseek)
# Options: openai, anthropic, deepseek
LLM_PROVIDER=deepseek

# DeepSeek API Key (required for deepseek provider)
# Get one at: https://platform.deepseek.com/api-keys
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# OpenAI API Key (required for openai provider)
# Get one at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (required for anthropic provider)
# Get one at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Model (default: deepseek-chat)
# Options for deepseek: deepseek-chat, deepseek-coder
# Options for openai: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Options for anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
MODEL=deepseek-chat

# Temperature (0.0 - 2.0, default: 0.4)
# Lower = more deterministic, Higher = more creative
TEMPERATURE=0.4

# Slow Mode (default: true)
# Shows step-by-step execution for learning
SLOW_MODE=true

# Pause Duration in seconds (default: 2.0)
# How long to pause between steps in slow mode
PAUSE_DURATION=2.0

# Max Iterations (default: 10)
# Safety limit for agent loop
MAX_ITERATIONS=10

# Verbose Output (default: true)
# Show detailed logs
VERBOSE=true

# Allow Code Execution (default: true)
# Set to false to disable the code runner tool
ALLOW_CODE_EXECUTION=true

# Gemini API Key (for Google Gemini models)
GEMINI_API_KEY=
