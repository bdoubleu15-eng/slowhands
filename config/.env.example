# SlowHands Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ============================================
# LLM Provider Settings
# ============================================

# LLM Provider (default: gemini)
# Options: gemini, openai, anthropic, deepseek
LLM_PROVIDER=gemini

# API Keys (set the one for your selected provider)
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Model name (default: gemini-3-pro-preview)
# Options for Gemini: gemini-3-pro-preview, gemini-2.0-flash-exp, etc.
# Options for OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# Options for Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
# Options for DeepSeek: deepseek-chat, deepseek-coder
MODEL=gemini-3-pro-preview

# Temperature (0.0 - 2.0, default: 0.7)
# Lower = more deterministic, Higher = more creative
TEMPERATURE=0.7

# Maximum tokens per response (default: 4096)
MAX_TOKENS=4096

# ============================================
# Agent Behavior Settings
# ============================================

# Slow Mode (default: true)
# Shows step-by-step execution for learning
SLOW_MODE=true

# Pause Duration in seconds (default: 2.0)
# How long to pause between steps in slow mode
PAUSE_DURATION=2.0

# Max Iterations (default: 10)
# Safety limit for agent loop
MAX_ITERATIONS=10

# Verbose Output (default: true)
# Show detailed logs
VERBOSE=true

# ============================================
# Memory Settings
# ============================================

# Max History Length (default: 50)
# Maximum number of messages to keep in memory
MAX_HISTORY_LENGTH=50

# Persist Memory (default: false)
# Save memory to disk between sessions
PERSIST_MEMORY=false

# ============================================
# Safety Settings
# ============================================

# Allow Code Execution (default: true)
# Set to false to disable the code runner tool
ALLOW_CODE_EXECUTION=true

# Allow Git Operations (default: true)
# Set to false to disable Git version control operations
ALLOW_GIT_OPERATIONS=true

# Allow Terminal Execution (default: true)
# Set to false to disable terminal command execution
ALLOW_TERMINAL_EXECUTION=true

# ============================================
# Web Search Settings
# ============================================

# Allow Web Search (default: true)
# Set to false to disable web search functionality
ALLOW_WEB_SEARCH=true

# Web Search API Key (optional)
# Get one from: https://serpapi.com/manage-api-key
WEB_SEARCH_API_KEY=

# ============================================
# Workspace Settings
# ============================================

# Workspace Path (default: project_root/workspace)
# Location for agent file operations
WORKSPACE_PATH=

# ============================================
# Reliability Settings
# ============================================

# Request Timeout in seconds (default: 60.0)
REQUEST_TIMEOUT=60.0

# Max Retry Attempts for API calls (default: 3)
RETRY_ATTEMPTS=3

# Min wait between retries in seconds (default: 1.0)
RETRY_MIN_WAIT=1.0

# Max wait between retries in seconds (default: 60.0)
RETRY_MAX_WAIT=60.0

# Rate Limit: Requests per minute (default: 60, 0 = disabled)
RATE_LIMIT_RPM=60

# Rate Limit: Tokens per minute (default: 90000, 0 = disabled)
RATE_LIMIT_TPM=90000

# Circuit Breaker Threshold (default: 5)
# Number of failures before circuit opens
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit Breaker Timeout in seconds (default: 60.0)
# Time before circuit resets
CIRCUIT_BREAKER_TIMEOUT=60.0

# ============================================
# Tool Retry Settings
# ============================================

# Tool Retry Attempts (default: 3)
TOOL_RETRY_ATTEMPTS=3

# Tool Retry Min Wait in seconds (default: 1.0)
TOOL_RETRY_MIN_WAIT=1.0

# Tool Retry Max Wait in seconds (default: 10.0)
TOOL_RETRY_MAX_WAIT=10.0

# Message Queue Max Size (default: 100)
MESSAGE_QUEUE_MAX_SIZE=100